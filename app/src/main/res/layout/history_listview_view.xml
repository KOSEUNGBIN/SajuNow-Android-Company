<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFFFF"
    android:paddingLeft="20dp">

    <ImageView
        android:id="@+id/history_image"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/history_default" />

    <TextView
        android:id="@+id/history_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/history_image"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="사용자"
        android:textAlignment="textStart"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/select_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_userName"
        android:layout_toRightOf="@id/history_image"
        android:gravity="start"
        android:text="전문사주"
        android:textColor="#88777777"
        android:paddingLeft="12dp"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_chatmessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_userName"
        android:layout_toRightOf="@id/select_history"
        android:gravity="start"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:textAlignment="textStart"
        android:textColor="#88777777"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/message_time"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="30초 전"
        android:textColor="#88777777"
        android:textSize="10sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/history_notread"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/message_counter"
        android:gravity="center"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>