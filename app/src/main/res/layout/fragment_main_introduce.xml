<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"

android:background="#ecf0f1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <TextView

                    android:id="@+id/profile_hello_tv"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="인사말"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/profile_hello_sentense_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:text="역술인 인사말"
        android:layout_marginBottom="5dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/profile_introduce_tv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="연혁/소개" />


    <TextView
        android:id="@+id/profile_introduce_sentense_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:paddingLeft="15dp"
        android:textSize="15sp"
        android:text="역술인 인사말역술인 "
        android:layout_marginBottom="5dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="영업 시간" />


        <TextView
            android:id="@+id/profile_time_sentense_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:text="평일 09:00 ~ 20:00"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="위치 정보" />


        <TextView
            android:id="@+id/profile_address_sentense_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:text="인천시 남구 용현동 165-8 301호"
            android:layout_marginBottom="5dp"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>
    </ScrollView>


</LinearLayout>