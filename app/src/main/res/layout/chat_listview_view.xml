<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_textlist_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chat_background_me"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:maxWidth="200dp"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_time"
        android:text="오후 05:15"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"/>

    <ImageView
        android:id="@+id/chat_imagelist_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="4dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/chat_textlist_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:maxWidth="200dp"
        android:padding="5dp"
        android:background="@drawable/chat_background_you"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/chat_imagelist_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:visibility="gone" />


</RelativeLayout>